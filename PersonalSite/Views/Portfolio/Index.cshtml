@{
    ViewData["Title"] = "Porfolio Overview";
}

<!-- Page Content-->
<section class="bg-light py-5">
    <div class="container px-5 my-5">
        <div class="text-center mb-5" id="dd-text">
            <h1 class="fw-bolder">Personal Projects</h1>
            <p class="lead fw-normal text-muted mb-0">Here are a few examples of the projects I have completed or am currently working on. To see more, check out my GitHub account! <a href="https://github.com/sjnegus"> <i class="fa fa-github"></i></a></p>
        </div>
        <div class="row bg-secondary shadow rounded py-5 gx-5 ">
            <div class="col-lg-6">
                <div class="position-relative mb-5">
                    <img class="img-fluid shadow rounded-3 mb-3" src="~/images/DD_Intro.png" alt="Intro screen of Dungeon Dweller." />
                    <a class="h3 fw-bolder link-light stretched-link" href="@Url.Action("DungeonDweller", "Portfolio")">Dungeon Dweller </a>
