@{
}

@model PersonalSite.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<main class="flex-shrink-0">
    <section class="bg-dark py-5">
        <div class="contact container px-5">
            <!-- ======= Confirmation Section ======= -->
            <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
                <div class="container">

                    <div class="row">

                        <div class="section-title">
                            <h2>Email Confirmation View</h2>
                            <p>
                                This View was created manually instead of scaffolding it from the Controller Action. This is because it does not have an Action of its own, but is instead passed as an argument to the return View() in the HttpPost version of the Contact Action. We also passed the ContactViewModel object to this View so it can be used to display information from the message for the user's convenience.
                            </p>
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-lg-12">

                            <div class="info-box">
                                <i class="bx bx-check-circle"></i>
                                <h3>Message Sent!</h3>
                                <p>
                                    Thank you for contacting us! A member of our team will respond to your
                                    message using the provided email address, @Model.Email, in the next 1-3
                                    business days.
                                </p>

                                <br />

                                <div class="offset-3 col-md-6 text-center">
                                    <p>
                                        You sent the following message on
                                        @DateTime.Now.Date.ToShortDateString() at
                                        @DateTime.Now.ToShortTimeString() :
                                    </p>
                                </div>

                                <br />

                                <div class="offset-3 col-md-6">
                                    <p>
                                        <em>@Model.Message</em>
                                    </p>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </section><!-- End Confirmation Section -->
        </div>
    </section>
</main>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
