@{
}

@model PersonalSite.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<main class="flex-shrink-0">
    <section class="bg-light py-5">
        <div class="contact container px-5">
            <!-- ======= Confirmation Section ======= -->
            <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
                <div class="row col-lg-12">
                    <div class="info-box">
                        <i class="bx bx-check-circle"></i>
                        <h1>Message Sent!</h1>
                        <h6>
                            Thank you for contacting me! I will respond to your
                            message using the provided email address, @Model.Email, as soon as possible!
                        </h6>
                        <br />
                        <div class="offset-3 col-md-6 text-center">
                            <p>
                                You sent the following message on
                                @DateTime.Now.Date.ToShortDateString() at
                                @DateTime.Now.ToShortTimeString() :
                            </p>
                        </div>
                        <br />
                        <div class="offset-3 col-md-6">
                            <p>
                                <em>@Model.Message</em>
                            </p>
                        </div>
                    </div>
                </div>
            </section><!-- End Confirmation Section -->
        </div>
    </section>
</main>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
